pipeline {
    agent any

    tools {
        nodejs "Node20"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Pradeep-ECE/MERN-Chat-App-Phase-2.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('server') {
                    bat "npm install"
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('server') {
                    bat "cmd /c npm test || exit 0"
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('server') {
                    bat "docker build -t chat-backend ."
                }
            }
        }

        stage('Docker Run') {
            steps {
                bat "docker run -d -p 4000:4000 chat-backend"
            }
        }
    }
}
